        <!-- Title Text -->
        <Text layoutX="83.0" layoutY="31.0" style="-fx-font-size: 16px;" text="Register New Account" wrappingWidth="157.6468505859375" />

        <!-- Name Field -->
        <TextField fx:id="nameField" layoutX="71.0" layoutY="65.0" prefWidth="200" promptText="Full Name" />

        <!-- Username Field -->
        <TextField fx:id="usernameField" layoutX="71.0" layoutY="112.0" prefWidth="200" promptText="Username" />

        <!-- Password Field -->
        <PasswordField fx:id="passwordField" layoutX="71.0" layoutY="154.0" prefWidth="200" promptText="Password" />

        <!-- Confirm Password Field -->
        <PasswordField fx:id="confirmPasswordField" layoutX="71.0" layoutY="200.0" prefWidth="200" promptText="Confirm Password" />

        <!-- Email Field -->
        <TextField fx:id="emailField" layoutX="71.0" layoutY="244.0" prefWidth="200" promptText="Email" />

